extends layout

block content
    #main-wrapper
        #main
            .page-header
                h4 Select common properties to compare between different organisms
                input#search_input.form-control(type='text', placeholder='Search properties', list="prop_datalist")
                datalist#prop_datalist
            #png-export-div
                button.btn.btn-default.btn-xs#pngexportbtn.hidden PNG export
            #prop_treeview.scrollable.col-md-8
                | loading treeview
            #proptable.col-md-4
                h5#propname
                a#csvexport(href='#', role='button')
                    button.btn.btn-default.btn-xs#csvexportbtn.hidden CSV export
                table.table.table-condensed
                    thead
                        tr
                            th Property
                            th Value
                            th Unit
                            th Organism
                    tbody
            #json-dump.hidden
