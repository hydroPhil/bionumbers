extends layout

block content
    #main-wrapper
        #main
            .page-header
                h4 Explore species and their properties, displays available propeties of children
                input#search_input.form-control(type='text', placeholder='Search species', list="spec_datalist")
                datalist#spec_datalist
            #spec_treeview.div-float.scrollable
                | loading treeview
            #proptable.div-float.table.table-condensed
                h4#specname
                table
                    thead
                        tr
                            th.col-md-1 Property
                            th Value
                            th Unit
                            th Organism
                    tbody
            #json-dump.hidden
